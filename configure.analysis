#!/bin/bash

output="makefile.analysis"

rm -f "$output"

#----------------------------------------------------------------------------------------------------
# define default set of targets

echo "all: merge" >> "$output"

#----------------------------------------------------------------------------------------------------
# per-directory targets

function AddSubTarget()
{
	local tag="$1"
	local deps="$2"
	local program="$3"
	local stream="$4"
	local options="$5"

	local target="$dir/.$tag.target"
	rm -f "target"
	subtargets="$subtargets $target"

	local deps_expanded=""
	for d in $deps
	do
		deps_expanded="$deps_expanded $dir/.$d.target"
	done

	(
		echo ""
		echo "$target : $deps_expanded"
		echo "	./run $program $dir/$stream -doNotCompile -wait $options"
	) >> "$output"
}

directory_targets=""

for dir in data/fill*
do
	tag=${dir#data/}

	subtargets=""
	
	AddSubTarget "pileup_ZeroBias" "" "pileup.cc" "ZeroBias" "" # this is the single most time consuming task - that's why it is run first and alone

	AddSubTarget "pileup_Totem1" "pileup_ZeroBias" "pileup.cc" "Totem1" ""
	
	AddSubTarget "eff3outof4_details" "pileup_ZeroBias" "eff3outof4_details.cc" "Totem1" ""

	AddSubTarget "process_timber" "pileup_ZeroBias" "process_timber.cc" "Totem1" ""

	AddSubTarget "unfolding_mc" "pileup_ZeroBias" "unfolding_cf_mc.cc" "Totem1" ""
	AddSubTarget "unfolding_ni" "pileup_ZeroBias" "unfolding_cf_ni.cc" "Totem1" ""

	AddSubTarget "distill_dgn" "pileup_ZeroBias" "distill.cc" "Totem1" ""
	AddSubTarget "distill_anti" "pileup_ZeroBias" "distill.cc" "Totem1" "-danti"

	AddSubTarget "distributions_bootstrap" "distill_dgn" "distributions.cc" "Totem1" "-O \"-bootstrap 1\""
	AddSubTarget "eff3outof4" "distill_dgn" "eff3outof4.cc" "Totem1" ""

	AddSubTarget "distributions_anti" "distill_anti" "distributions_anti.cc" "Totem1" ""

	AddSubTarget "resolution_fit" "distributions_bootstrap" "resolution_fit.cc" "Totem1" ""

	AddSubTarget "eff3outof4_fit" "eff3outof4" "eff3outof4_fit.cc" "Totem1" ""

	AddSubTarget "distributions_details" "resolution_fit eff3outof4_fit pileup_ZeroBias unfolding_ni" "distributions.cc" "Totem1" "-O \"-details 5\""

	AddSubTarget "alignment" "distributions_details" "alignment.cc" "Totem1" ""
	AddSubTarget "alignment_final" "distributions_details" "alignment_final.cc" "Totem1" ""

	AddSubTarget "alignment_fit" "alignment" "alignment.cc" "Totem1" ""
	AddSubTarget "distributions" "alignment alignment_final" "distributions.cc" "Totem1" ""

	target="data/$tag/.target"
	rm -f "$target"
	directory_targets="$directory_targets $target"

	(
		echo  ""
		echo "$target: $subtargets"
	) >> "$output"
done


#----------------------------------------------------------------------------------------------------
# merge target
(
	echo  ""
	echo "merge: $directory_targets"
	echo "	cd data; ./merge"
) >> "$output"

